<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp">

    <RelativeLayout
        android:id="@+id/item_container_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_edittext_contact"/>

        <TextView
            android:id="@+id/full_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="36dp"
            android:layout_toEndOf="@id/contact_image"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nick_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_name_text_view"
            android:layout_marginEnd="36dp"
            android:layout_toEndOf="@id/contact_image"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/menu_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_menu"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>